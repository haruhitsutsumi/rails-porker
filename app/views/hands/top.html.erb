<div class="main-view">
  <div class="container">
    <div class="header">
      <h1>Check a Poker Hand</h1>
    </div>

    <div class="main">
      <%= form_tag("/hands/judge")do %>
      <div class="inputarea">
        <input class="inputbox" name="hands" value="<%= @input%>" placeholder="S10 H11 D12 C13 H1"></input>
      </div>
      <div class="inputbtnarea">
        <input class="inputbtn" type="submit" value="Check">
      </div>
      <% end %>
      <% if @hand.error_message %>
      <div class="error_message">
          <%= simple_format(@hand.error_message)%>
      </div>
      <% end %>
      <% if @hand %>
      <div class="hand">
        <%= @hand.finalj%>
      </div>
      <% end %>

    </div>
    <div class="footer">
      <p>Â©Copyright 2021 porkerhands All Rights Reserved.</p>
    </div>

</div>